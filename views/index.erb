<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <title>Tinder++</title>

  <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.3/moment.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.2/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/mousetrap/1.4.6/mousetrap.min.js"></script>
  <script src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
  <script src="/swing.js"></script>
  <script src="/ngAutocomplete.js"></script>
  <script src="/app.js"></script>

  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css"/>
  <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet' type='text/css'>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/app.css"/>
</head>
<body ng-app="tinder++" ng-controller="TinderController">
  <div class="user">
    <div class="right">
      <p>
        {{getCookie('name')}}
        <a href="" ng-click="showLocation = !showLocation" >({{getCookie('currentCity') ? getCookie('currentCity') : 'set location'}})</a>
        <br>
        <a href="/logout">Logout</a>
      </p>
      <img src="http://images.gotinder.com/542e7b4bb29f65ac70c1fb8f/84x84_b2614253-f943-4dc6-809c-3c8079ccf574.jpg" />
      <div ng-show="showLocation">
        <input type="text" ng-autocomplete ng-model="autocomplete" options="autocompleteOptions" details="details"
               placeholder="Change Location" id="autocompleteLocation" />
      </div>
    </div>
    <div class="clear"></div>
  </div>
  <div class="top-button">
    <div class="button"></div>
  </div>
  <div class="container">
    <div ng-show="allPeople.length === 0 || peopleIndex >= allPeople.length">Loading...</div>
    <div ng-show="allPeople.length > 0 && peopleIndex < allPeople.length">
      <h1 class="fader">{{allPeople[peopleIndex].name}}, {{allPeople[peopleIndex].birth_date | bdayToAge}}</h1>
      <h3 class="fader">{{allPeople[peopleIndex].distance_mi}} miles {{getCookie('currentCity') ? "from " + getCookie('currentCity') : 'away'}}</h3>

      <div class="main-photo-container">
        <div class="main-photo tinder-card" ng-repeat="user in allPeople.slice().reverse()" render-images-directive
             style="background-image: url({{user.photos[user.photoIndex].processedFiles[1].url}});">
          <div class="pass-overlay">
            <i class="fa fa-thumbs-o-down"></i>
          </div>
          <div class="like-overlay">
            <i class="fa fa-thumbs-o-up"></i>
          </div>
        </div>
      </div>
      <p class="fader bio">{{allPeople[peopleIndex].bio || 'No Bio'}}</p>
      <div class="small-photos fader">
        <div ng-repeat="photo in allPeople[peopleIndex].photos">
          <img ng-src="{{photo.processedFiles[2].url}}" ng-click="swapPhoto($index)" data-photo-index="{{$index}}"
               ng-class="{'selected': $index === allPeople[peopleIndex].photoIndex}" />
        </div>
      </div>
    </div>
  </div>
</body>
</html>